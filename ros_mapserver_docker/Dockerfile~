FROM ros:indigo

# install python dependencies
RUN apt-get update && apt-get install -y ros-indigo-map-server

RUN cd ~/var/ %% mkdir maps

COPY ./icclab_latest_map.pgm ~/var/maps/icclab_latest_map.pgm
COPY ./icclab_latest_map.yaml ~/var/maps/icclab_latest_map.yaml

# run it
CMD ["/bin/bash", "-c", "source /opt/ros/indigo/setup.bash && rosrun map_server map_server ~/var/maps/icclab_latest.yaml"]
